{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "NodeNext",
    "jsx": "react-jsx",
    "paths": {
      "@repo/ui/*": ["./packages/ui/src/*"],
      "@repo/api": ["./packages/api/src"],
      "@repo/types": ["./packages/types/src"]
    }
  }
}
