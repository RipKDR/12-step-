{
  "name": "recovery-companion-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:web": "pnpm --filter web dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "latest",
    "typescript": "^5.1.3"
  },
  "packageManager": "pnpm@8.6.10"
}
