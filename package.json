{
  "name": "recovery-companion-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:web": "pnpm --filter web dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo typecheck",
    "check": "turbo check --no-dev --format json"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "latest",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@8.6.10",
  "pnpm": {
    "overrides": {
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "@types/react": "~18.2.0"
    }
  }
}
